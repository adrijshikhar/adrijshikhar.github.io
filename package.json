{
  "private": true,
  "name": "adrijshikhar.github.io",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender --no-inline-css --sw",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "test": "jest",
    "eslint": "eslint --fix src/**/*.js",
    "stylelint": "stylelint \"./src/styles/**/*.{css,scss,sass}\" --fix --config .stylelintrc.json",
    "prepare": "husky install",
    "deploy": "gh-pages -d build -b master"
  },
  "devDependencies": {
    "@aerian/eslint-config-preact": "^13.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lint-staged": "^12.3.3",
    "preact-cli": "^3.4.1",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "sass-loader": "10",
    "sirv-cli": "2.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix src/**/*.js",
    "*.scss": "stylelint \"./src/styles/**/*.{css,scss,sass}\" --fix --config .stylelintrc.json"
  }
}
