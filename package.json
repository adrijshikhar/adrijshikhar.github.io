{
  "private": true,
  "name": "adrijshikhar.github.io",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender --no-inline-css --sw",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "test": "jest",
    "eslint": "eslint --fix src/**/*.js",
    "stylelint": "stylelint \"./src/styles/**/*.{css,scss,sass}\" --fix --config .stylelintrc.json",
    "prepare": "husky install",
    "deploy": "gh-pages -d build -b master"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-preset-preact": "^4.1.0",
    "lint-staged": "^15.0.2",
    "preact-cli": "^3.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "10",
    "sirv-cli": "2.0.2",
    "stylelint": "^15.11.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.3.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^6.2.2",
    "preact-router": "^4.1.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix src/**/*.js",
    "*.scss": "stylelint \"./src/styles/**/*.{css,scss,sass}\" --fix --config .stylelintrc.json"
  }
}
